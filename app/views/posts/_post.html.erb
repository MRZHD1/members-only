<div id="<%= dom_id post %>">
  <p>
    <strong>Author:</strong>
    <% if user_signed_in? %>
      <%= User.find(post.user_id).email%>
    <% else %>
      <i>Hidden</i>
    <% end %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

</div>
